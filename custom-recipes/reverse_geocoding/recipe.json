{
    "meta" : {
        "label" : "Reverse geocoding",
        "description": "Transform coordinates to readable addresses.",
        "icon" : "icon-rotate-left"
    },
    
    "kind" : "PYTHON",
    "selectableFromDataset":  "input_ds",

    "inputRoles" : [
        {
            "name": "input_ds",
            "label": "Input dataset",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "outputRoles" : [
        {
            "name": "output_ds",
            "label": "Output dataset",
            "arity": "UNARY",
            "required": false,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "lat_column",
            "label" : "Latitude column",
            "type": "COLUMN",
            "columnRole":"input_ds",
            "mandatory" : true
        },
        {
            "name": "lng_column",
            "label" : "Longitude column",
            "type": "COLUMN",
            "columnRole":"input_ds",
            "mandatory" : true
        },
        {
            "name": "provider",
            "label" : "Geocoding provider",
            "type": "SELECT",
            "selectChoices": [
            {
                "value":"arcgis",
                "label":"Arcgis"
            },
            {
                "value":"baidu",
                "label":"Baidu"
            },
            {
                "value":"bing",
                "label":"Bing"
            },
            {
                "value":"gaode",
                "label":"Gaode"
            },
            {
                "value":"geocodefarm",
                "label":"Geocodefarm"
            },
            {
                "value":"gisgraphy",
                "label":"Gisgraphy"
            },
            {
                "value":"google",
                "label":"Google"
            },
            {
                "value":"here",
                "label":"HERE"
            },
            {
                "value":"komoot",
                "label":"Komoot"
            },
            {
                "value":"locationiq",
                "label":"LocationIQ"
            },
            {
                "value":"mapbox",
                "label":"Mapbox"
            },
            {
                "value":"mapquest",
                "label":"MapQuest"
            },
            {
                "value":"opencage",
                "label":"OpenCage"
            },
            {
                "value":"osm",
                "label":"OpenStreetMap"
            },
            {
                "value":"uscensus",
                "label":"USCensus"
            },
            {
                "value":"w3w",
                "label":"What3Words"
            },
            {
                "value":"yandex",
                "label":"Yandex"
            }
            ]
        },
        {
            "name": "sep_conf",
            "type": "SEPARATOR",
            "label" : "Configuration"
        },
        {
            "name": "cache_enabled",
            "type": "BOOLEAN",
            "label" : "Use cache",
            "defaultValue": true
        },
        {
            "name": "batch_enabled",
            "type": "BOOLEAN",
            "label" : "Use batch mode",
            "defaultValue": true,
            "visibilityCondition" : "model.provider == 'bing'"
        },
        {
            "name": "batch_size_bing",
            "type": "INT",
            "label" : "Bing batch size",
            "description": "50 for free basic keys, 200 000 for enterprise ones",
            "defaultValue": 50,
            "visibilityCondition" : "model.provider == 'bing' && model.batch_enabled"
        },
        {
            "name": "column_prefix",
            "type": "STRING",
            "label" : "Prefix for output columns",
            "defaultValue": ""
        },
        {
            "name": "sep_feat",
            "type": "SEPARATOR",
            "label" : "Features to retrieve"
        },
        {
            "name": "address",
            "type": "BOOLEAN",
            "label" : "Address",
            "defaultValue": true
        },
        {
            "name": "city",
            "type": "BOOLEAN",
            "label" : "City",
            "defaultValue": true
        },
        {
            "name": "postal",
            "type": "BOOLEAN",
            "label" : "Postal code",
            "defaultValue": true
        },
        {
            "name": "state",
            "type": "BOOLEAN",
            "label" : "State",
            "defaultValue": true
        },
        {
            "name": "country",
            "type": "BOOLEAN",
            "label" : "Country",
            "defaultValue": true
        },
        {
            "name": "sep_auth",
            "type": "SEPARATOR",
            "label" : "Authentication",
            "visibilityCondition" : "['baidu', 'bing', 'canadapost', 'gaode', 'geonames', 'google', 'here', 'locationiq',  'mapbox',  'mapquest',  'mapzen',  'opencage',  'tamu',  'tomtom',  'w3w'].indexOf(model.provider) >= 0"
        },
        {
            "name": "api_key",
            "type": "STRING",
            "label" : "API key",
            "visibilityCondition" : "['baidu', 'bing', 'canadapost', 'gaode', 'geonames', 'google', 'locationiq',  'mapbox',  'mapquest',  'mapzen',  'opencage',  'tamu',  'tomtom',  'w3w'].indexOf(model.provider) >= 0"
        },
        {
            "name": "here_app_id",
            "type": "STRING",
            "label" : "HERE App ID",
            "visibilityCondition" : "model.provider === 'here'"
        }, 
        {
            "name": "here_app_code",
            "type": "STRING",
            "label" : "HERE App Code",
            "visibilityCondition" : "model.provider === 'here'"
        },
        {
            "name": "google_client",
            "type": "STRING",
            "label" : "Google client ID",
            "description": "Only if using a premium plan - optional otherwise",
            "visibilityCondition" : "model.provider === 'google'"
        }, 
        {
            "name": "google_client_secret",
            "type": "STRING",
            "label" : "Google secret",
            "description": "Only if using a premium plan - optional otherwise",
            "visibilityCondition" : "model.provider === 'google'"
        }
    ],

    "resourceKeys" : []

}
